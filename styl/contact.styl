.content-contact
  background none
  width 100%
  padding 0
  text-align center
  #form
    position relative
    width 80%
    margin 25% auto 0 auto
    input, textarea, #submit
      color black
      box-sizing border-box
      width 100%
      height: 50px
      padding: 0px 15px 0px 15px
      background white
      outline: none
      border: solid 1px rgba(131, 208, 245, .9)
      border-bottom: none
      transition: all 0.3s ease-in-out
      font-size 14px
    textarea
      height: 110px
      padding: 15px
      transition: all 0.3s ease-in-out
    #submit
      padding: 0
      cursor: pointer
      border-bottom: solid 1px rgba(131, 208, 245, .9)
      &:hover
        background rgba(131, 208, 245, .9)

    input:hover, textarea:hover
      background rgba(230, 0, 125, .8)

    span
      display flex
      padding 5px10px


.logo-clubs
    position absolute
    right 20px
    bottom 30px
    width 75px
    img
        width 75px
        padding 5px 0
.content-clubs
    position absolute
    left 20px
    width 40%
    height 90.9%
    padding 20px
    text-align left
    color white
    overflow-x hidden
    overflow-y scroll
    background rgba(0,0,0,.8)
    letter-spacing -0.4px
    text-transform lowercase
    &::-webkit-scrollbar
        display none
    h1
        font-size 60px
        margin 30px 0 0 0
        padding 0
        line-height 70px
    h4
        font-size 16px
        margin 0 0 40px 0
    h3
        font-size 40px
        margin 20px 0 0 0
    span
        font-size 18px
        margin 0
    p
        margin 10px 0 0 0
        text-transform initial